doctype html
html(lang="en", ng-app="myApp")
  head
    meta(charset="utf-8")
    title Tabbar Demo | Onsen UI
    //- link(rel="stylesheet", href="css/app.css")
    link(rel="stylesheet", href="css/onsenui.css")
    link(rel="stylesheet", href="css/onsen-css-components.css")
    script(src="js/angular/angular.js")
    script(src="js/onsenui.min.js")
    script(src="js/jquery.js")
    script(src="js/app.js")
  body

  if appmenus
    -var tabbarlist=appmenus.filter(function(i){return i.menu=="tabbar"})
    if tabbarlist.length
      ons-tabbar(var="tabbar")
        ons-tab(label="Home", page="home.html", active="true")
        each menu in tabbarlist
          ons-tab(label=menu.title, page=menu.screenID+".html")

    if appmenus
      -var sidemenulist=appmenus.filter(function(i){return i.menu=="sidemenu"})
      if sidemenulist.length
        ons-sliding-menu(main-page="home.html", menu-page="menu.html", side="left", var="Smenu")

        ons-template(id="menu.html")
          ons-list
            each menu in sidemenulist
              ons-list-item(modifier="chevron", onclick="Smenu.setMainPage('#{menu.screenID}.html', {closeMenu: true})")
                span=menu.title

    ons-template(id="home.html")
      ons-toolbar
        if sidemenulist.length
          div(class="left")
            ons-toolbar-button(onclick="Smenu.toggleMenu()")
              ons-icon(icon="fa-bars")
        div(class="center") Home


    if screens
      each screen in screens
        ons-template(id=screen.id+".html")
          ons-page
            ons-toolbar
              if sidemenulist.length
                div(class="left")
                  ons-toolbar-button(onclick="Smenu.toggleMenu()")
                    ons-icon(icon="fa-bars")
              div(class="center")
                !{screen.title}
            ons-row(style="padding:8px")
              ons-col 
                !{screen.content}

