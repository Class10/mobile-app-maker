extends layout

block title
  title Shovel apps CMS - #{__('Category Manager')}

block content
  .container-fluid.bg-white.cms.menues-manager(role='main')
    .header.center-block.row.voffset6
      a.back-button.pull-left(href='#')
      .col-md-3.col-sm-4.devices.text-right.hidden-xs
        .os
          a.android.active(href='#')
          .separate
          a.ios(href='#')
      .col-md-6.col-sm-6
        h2 #{__('Category Manager')}
      .col-md-1
        a.upload-theme.pull-right(href='#')
          img(src='/coreassets/assets/save-icon.svg')
          span #{__('Save changes')}
      .devices.text-center.visible-xs
        .os
          a.android.active(href='#')
          a.ios(href='#')
        a.phone.active(href='#')
        a.tablet(href='#')
    .col-md-8.col-md-offset-2.voffset7.text-left
      table.table.table-bordered.table-shovel.table-category
        thead
          tr
            th #
            th #{__('Category name')}
            th #{__('Parent')}
            th #{__('Actions')}
        tbody
          tr
            td.text-center 1
            td
              input(type='text', value='Behaviors', placeholder='Name your category')
            td
              select.select2(data-placeholder='Parent')
                option Root
                option Uncategorized
                option Behaviors
                option Content
            td.actions
              a.publish(href='#')
              a.delete(href='#')
          tr
            td.text-center 2
            td
              input(type='text', value='Content', placeholder='Name your category')
            td
              select.select2(data-placeholder='Parent')
                option Root
                option Uncategorized
                option Behaviors
                option Content
            td.actions
              a.unpublish(href='#')
              a.delete(href='#')
          tr.new
            td
            td
              input(type='text', placeholder='Name your category')
            td
              select.select2(data-placeholder='Parent')
                option
                // Necesario para el placeholder
                option Root
                option Uncategorized
                option Behaviors
                option Content
            td.actions
              a.add(href='#')